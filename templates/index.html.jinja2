<script>
    let locations = [
        {% for location in locations %}
            {
                'lat': '{{ location.lat | string | safe }}',
                'lng': '{{ location.lon | string | safe }}',
                'occupancy': {{ location.occupancy }},
                {% if location.temperature  %}'temperature': {{ location.temperature }},{% endif %}
                {% if location.humidity  %}'humidity': {{ location.humidity }},{% endif %}
            },
        {% endfor %}
    ]

    let baseLayer = L.tileLayer(
        'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Map data &copy; <a href="https://openstreetmap.org">OpenStreetMap</a>',
        }
    )
    let cfg = {
        "radius": 40,
        "useLocalExtrema": true,
        valueField: 'occupancy',
    };
    let heatmapLayer = new HeatmapOverlay(cfg);
    let min = Math.min(...locations.map(sale => sale.value))
    let max = Math.max(...locations.map(sale => sale.value))
    let propertyHeatMap = new L.Map('map', {
        center: new L.LatLng(25.650906355649028, -100.2896934916991),
        zoom: 20,
        layers: [baseLayer, heatmapLayer]
    })
    heatmapLayer.setData({
        min: min,
        max: max,
        data: locations
    });

    locations.forEach(({lat, lng, occupancy, humidity, temperature}) => {
        let marker = L.marker([lat, lng]).addTo(propertyHeatMap)
        marker.bindTooltip(`Ocupacion: ${occupancy} personas <br> Humedad: ${humidity}% <br> Temperatura: ${temperature}°C`)
    })
</script>
